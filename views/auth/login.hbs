  <div class="auth">
    <div class="row">
        <div class="col s12">
        <ul class="tabs">
            <li class="tab col s6"><a href="#login" class="active">Вход</a></li>
            <li class="tab col s6"><a href="#register">Регистрация</a></li>
        </ul>
        </div>
         {{#if loginErr}}
          <div class="reg-err"><p>{{loginErr}}</p></div>
        {{/if}}
         {{#if loginPassErr}}
          <div class="reg-err"><p>{{loginPassErr}}</p></div>
        {{/if}}
        <div id="login" class="col s6 offset-s3">
          <h1>Вход в магазин</h1>
          <form action="/auth/login" method="post">
            <div class="input-field">
              <input name="email" id="email" type="email" class="validate" required="required">
              <label for="email">Введите ваш email</label>
              <span class="helper-text" data-error="Некорректный email"></span>
            </div>
            <div class="input-field">
              <input name="password" id="password" type="password" class="validate" required="required">
              <label for="password">Введите пароль</label>
              <span class="helper-text" data-error="Неправильный пароль"></span>
            </div>
            <input type="hidden" name="_csrf" value="{{csrf}}">
            <button type="submit" class="btn btn-primary">Вход</button>
          </form>
          <p class="forget__pass">
            <a href="/auth/reset">Забыли пароль?</a>
          </p>
        </div>
        {{#if error}}
          <div class="reg-err"><p>{{error}}</p></div>
        {{/if}}
        {{#if passErr}}
          <div class="reg-err"><p>{{passErr}}</p></div>
        {{/if}}
        <div id="register" class="col s6 offset-s3">
          <h1>Регистрация</h1>
           <form action="/auth/register" method="post">
            <div class="input-field">
              <input name="name" id="name" type="text" class="validate">
              <label for="name">Введите ваше имя</label>
            </div>
            <div class="input-field">
              <input name="email" id="reg-email" type="email" class="validate" required="required">
              <label for="email">Введите ваш email</label>
              <span class="helper-text" data-error="Некорректный email"></span>
            </div>
            <div class="input-field">
              <input name="password" id="reg-password" type="password" class="validate" required="required">
              <label for="password">Введите пароль</label>
              <span class="helper-text" data-error="Неправильный пароль"></span>
            </div>
            <div class="input-field">
              <input name="confirm" id="confirm" type="password" class="validate" required="required">
              <label for="confirm">Введите пароль повторно</label>
              <span class="helper-text" data-error="Неправильный пароль"></span>
            </div>
            <input type="hidden" name="_csrf" value="{{csrf}}">
            <button type="submit" class="btn btn-primary">Регистрация</button>
          </form>
        </div>
        <div id="register" class="col s6 offset-s3"></div>
    </div>
  </div>