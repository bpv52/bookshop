<h1>Книги:</h1>
{{#if books.length }}
<div class="row">
{{#each books}}
  <div class="col s3">
    <div class="card">
      <div class="card-image">
        <img src="{{image}}" alt="{{title}}">        
      </div>
      <div class="card-content">
        <span class="card-title">{{title}}</span>
        <p class="price">{{price}}</p>
      </div>
      <div class="card-action">
        <a href="/books/{{_id}}"><i>Подробнее</i></a>
        {{!-- Проверка: --}}
        {{!-- <pre>
            {{userId.id}}
            {{@root.userId}}
        </pre> --}}
        {{#if @root.isAuth}}
          {{#if_eq userId._id @root.userId}}
            <a href="/books/{{_id}}/edit?allow=true"><i>Редактировать</i></a>
          {{/if_eq}}
          <form action="/cart/add" method="post">
            <input type="hidden" name="_csrf" value="{{@root.csrf}}">
            <input type="hidden" name="_id" value="{{_id}}">
            <button class="btn" type="submit">Купить</button>
          </form>
        {{/if}}
      </div>
    </div>
  </div>
{{/each}}
</div>
{{else}}
<p>На данный момент книги в магазине отсутствуют.</p>
{{/if}}
